<% if @winner -%>
	$("#winner").html('<%= @winner.capitalize %>! <%= link_to "Play Again", games_new_path %>');
	$("div[id^='grid']").each(function() {
	  if ($(this).hasClass("available")) {
	    $(this).removeClass("available");
	  }
	});
<% else %>
  $("#winner").html("<%= pluralize(@turns_left, 'turn') %> left");
<% end -%>
